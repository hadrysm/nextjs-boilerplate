{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "description": "Next.js boilerplate with husky, lint-staged, eslint + prettier, jest, react-testing-library, storybook, ghaction and plop.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,json}\"",
    "lint": "next lint",
    "eslint:format": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "postinstall": "husky install",
    "generate": "yarn plop --plopfile ./.plop/plopfile.js"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn prettier:format",
      "yarn eslint:format"
    ]
  },
  "dependencies": {
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "6.5.10",
    "@storybook/addon-actions": "6.5.10",
    "@storybook/addon-essentials": "6.5.10",
    "@storybook/addon-interactions": "6.5.10",
    "@storybook/addon-links": "6.5.10",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/addon-storysource": "6.5.10",
    "@storybook/react": "6.5.10",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.7.14",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "autoprefixer": "10.4.8",
    "babel-jest": "29.0.1",
    "eslint": "8.23.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import-helpers": "1.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.6",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "5.6.0",
    "husky": "8.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.0.1",
    "jest-environment-jsdom": "29.0.1",
    "jest-watch-typeahead": "2.1.1",
    "lint-staged": "13.0.3",
    "pinst": "3.0.0",
    "plop": "3.1.1",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "storybook-addon-next-router": "4.0.0",
    "storybook-dark-mode": "1.1.0",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.2"
  }
}
